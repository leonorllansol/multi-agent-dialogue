<corpora>
	<query>
		<corpus>
			<name>QNQ</name>
			<path>/corpora/query/Treino/questionNonQuestion.csv</path>
			<hierarchyType>subcorpus</hierarchyType>
			<corpusType>generic</corpusType>
			<vectorizer>
				<name>CountVectorizer</name>
				<param>encoding='utf-8'</param>
				<param>ngram_range=(1,1)</param>
				<param>tokenizer=TweetTokenizer().tokenize</param>
			</vectorizer>
			<classifier>
				<name>LinearSVC</name>
			</classifier>
			<corpus>
				<name>PI</name>
				<path>/corpora/query/Treino/personalImpersonal.csv</path>
				<corpusType>generic</corpusType>
				<parentLabel>QUESTION</parentLabel>
				<vectorizer>
					<name>TfidfVectorizer</name>
					<param>encoding='utf-8'</param>
					<param>ngram_range=(1,2)</param>
					<param>tokenizer=TweetTokenizer().tokenize</param>
				</vectorizer>
				<classifier>
					<name>SVC</name>
					<param>kernel="linear"</param>
				</classifier>
			</corpus>
			<corpus>
				<name>YN</name>
				<path>/corpora/query/Treino/ynQuestion.csv</path>
				<corpusType>generic</corpusType>
				<parentLabel>QUESTION</parentLabel>
				<vectorizer>
					<name>CountVectorizer</name>
					<param>encoding='utf-8'</param>
					<param>ngram_range=(1,1)</param>
					<param>tokenizer=TweetTokenizer().tokenize</param>
				</vectorizer>
				<classifier>
					<name>LinearSVC</name>
				</classifier>

			</corpus>
		</corpus>
		<corpus>
			<name>LR</name>
			<path>/corpora/query/Treino/liRoth.csv</path>
			<corpusType>generic</corpusType>
			<hierarchyType>sublabel</hierarchyType>
			<vectorizer>
				<name>TfidfVectorizer</name>
				<param>encoding='utf-8'</param>
				<param>ngram_range=(1,2)</param>
				<param>tokenizer=TweetTokenizer().tokenize</param>
			</vectorizer>
			<classifier>
					<name>LinearSVC</name>
			</classifier>
			<sublabel>
				<vectorizer>
					<name>CountVectorizer</name>
					<param>encoding='utf-8'</param>
					<param>ngram_range=(1,1)</param>
					<param>tokenizer=TweetTokenizer().tokenize</param>
				</vectorizer>
				<classifier>
					<name>LinearSVC</name>
				</classifier>
			</sublabel>
		</corpus>
		<corpus>
			<name>edgar</name>
			<path>/corpora/query/Treino/edgar_corpus_so_questoes.txt</path>
			<corpusType>specific</corpusType>
		</corpus>
		<corpus>
			<name>AMA_query</name>
			<path>/corpora/query/AMA_corpus_query.txt</path>
			<corpusType>specific</corpusType>
		</corpus>
		<corpus>
			<name>covid_query</name>
			<path>/corpora/query/covid_query.csv</path>
			<corpusType>specific</corpusType>
		</corpus>
	</query>
	<answer>
		<corpus>
			<name>AMA_answer</name>
			<path>/corpora/answer/AMA_corpus_answer.txt</path>
			<corpusType>specific</corpusType>
			<vectorizer>
				<name>CountVectorizer</name>
				<param>encoding='utf-8'</param>
				<param>ngram_range=(1,1)</param>
				<param>tokenizer=TweetTokenizer().tokenize</param>
			</vectorizer>
			<classifier>
				<name>LinearSVC</name>
				<param>max_iter=5000</param>
			</classifier>
		</corpus>
		<corpus>
			<name>edgar</name>
			<path>/corpora/answer/edgar_corpus_so_respostas.txt</path>
			<corpusType>specific</corpusType>
		</corpus>
		<corpus>
			<name>covid_answer</name>
			<path>/corpora/answer/covid_answer.csv</path>
			<corpusType>specific</corpusType>
		</corpus>
	</answer>
</corpora>
